@model List<ENTITIES.Models.Projeler>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Projeler</div>
					</div>
					<div class="card-body">
						<table class="table table-hover">
							<thead>
								<tr>
									<th scope="col">Id</th>
									<th scope="col">Başlık</th>
									<th scope="col">Tip</th>
									<th scope="col">Alt Başlık</th>
									<th scope="col">Resim Yolu</th>
									<th scope="col">Proje Url</th>
									<th scope="col">Açıklama</th>
									<th scope="col">İşlemler</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model) {
								<tr>
									<td>@item.Id</td>
									<td>@item.Baslik</td>
									<td>@item.Tip</td>
									<td>@item.AltBaslik</td>
									<td>@item.ResimYolu</td>
									<td>
										@if (!string.IsNullOrEmpty(item.ProjeUrl))
										{
											<a href="@item.ProjeUrl" target="_blank">@item.ProjeUrl</a>
										}
									</td>
									<td>@item.Aciklama</td>
									<td>
											<a href="/Projeler/ProjeGuncelle/@item.Id" class="btn btn-info btn-sm">Güncelle</a>
											<a href="/Projeler/ProjeSil/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
									</td>
								</tr>
								}
							</tbody>
						</table>
						<a href="/Admin/Projeler/ProjeEkle" class="btn btn-primary">Yeni Ekle</a>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
