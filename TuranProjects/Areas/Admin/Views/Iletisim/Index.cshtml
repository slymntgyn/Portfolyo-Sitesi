@model List<ENTITIES.Models.Contact>
@{
	ViewData["Title"] = "İletişim";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim</div>
					</div>
					<div class="card-body">
						<table class="table table-hover">
							<thead>
								<tr>
									<th scope="col">Id</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Telefon</th>
									<th scope="col">Telefon 2</th>
									<th scope="col">Email</th>
									<th scope="col">Email 2</th>
									<th scope="col">Adres</th>
									<th scope="col">İşlemler</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model) {
									<tr>
										<td>@item.Id</td>
										<td>@item.Baslik</td>
										<td>@item.Aciklama</td>
										<td>@item.Telefon</td>
										<td>@item.Telefon2</td>
										<td>@item.Email</td>
										<td>@item.Email2</td>
										<td>@item.Adres</td>
										<td>
											<a asp-action="IletisimGuncelle" asp-route-id="@item.Id">Edit</a> |
											<a asp-action="IletisimSil" asp-route-id="@item.Id">Delete</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					
						<a href="/Admin/Iletisim/IletisimEkle" class="btn btn-primary">Yeni Ekle</a>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
