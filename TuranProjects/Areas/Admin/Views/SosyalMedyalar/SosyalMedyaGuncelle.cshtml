@model ENTITIES.Models.SosyalMedyalar

@{
    ViewData["Title"] = "SosyalMedyaGuncelle";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medyalar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medyalar</div>
                    </div>
                    <div class="card-body">
                        <form asp-action="SosyalMedyaGuncelle" method="post">
                            <div class="form-group">
                                <label asp-for="Adi" class="control-label"></label>
                                <input asp-for="Adi" class="form-control" />
                                <span asp-validation-for="Adi" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Url" class="control-label"></label>
                                <input asp-for="Url" class="form-control" />
                                <span asp-validation-for="Url" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Icon" class="control-label"></label>
                                <input asp-for="Icon" class="form-control" />
                                <span asp-validation-for="Icon" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Durum" class="control-label"></label>
                                <input asp-for="Durum" class="form-control" />
                                <span asp-validation-for="Durum" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SiraNo" class="control-label"></label>
                                <input asp-for="SiraNo" class="form-control" />
                                <span asp-validation-for="SiraNo" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </form>
                        <button style="margin-right:0px" class="btn btn-primary">Yeni Ekle</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>