@model List<ENTITIES.Models.Ozellik>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Ozellik</div>
					</div>
					<div class="card-body">
						<table class="table table-hover">
							<thead>
								<tr>
									<th scope="col">Id</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Açıklama 2</th>
									<th scope="col">Resim</th>
									<th scope="col">İşlemler</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model) {
								<tr>
									<td>@item.Id</td>
									<td>@item.Baslik</td>
									<td>@item.Aciklama</td>
									<td>@item.Aciklama2</td>
									<td>
										@if (!string.IsNullOrEmpty(item.Resim))
										{
											<img src="@item.Resim" alt="Resim" style="max-width:100px;max-height:100px;" />
										}
									</td>
									<td>
										<a href="/Admin/Ozellik/OzellikGuncelle/@item.Id" class="btn btn-info btn-sm">Güncelle</a>
											<form method="post" action="/Admin/Ozellik/SetOzellikSil/@item.Id" style="display:inline;" onsubmit="return confirm('Silmek istediğinize emin misiniz?');">
												<button type="submit" class="btn btn-danger btn-sm">Sil</button>
											</form>
							
									</td>
								</tr>
								}
							</tbody>
						</table>
						<a href="/Admin/Ozellik/OzellikEkle" class="btn btn-primary">Yeni Ekle</a>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
