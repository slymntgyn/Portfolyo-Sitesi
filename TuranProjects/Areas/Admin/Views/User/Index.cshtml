@model IEnumerable<IdentityUser>
@{
    ViewData["Title"] = "Users Management";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">@ViewData["Title"]</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">@ViewData["Title"]</div>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>User Name</th>
                                    <th>Roller</th>
                                    <th>Email</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td user-name="@user.UserName" user-role></td>
                                        <td>@user.Email</td>
                                        <td>
                                            <a asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-id="@user.UserName" class="btn btn-primary btn-sm">Edit</a>
                                            <a asp-area="Admin" asp-controller="User" asp-action="ResetPassword" asp-route-id="@user.UserName" class="btn btn-warning btn-sm">Reset Password</a>
                                            <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a asp-area="Admin" asp-controller="User" asp-action="Create" class="btn btn-success">Create New User</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
