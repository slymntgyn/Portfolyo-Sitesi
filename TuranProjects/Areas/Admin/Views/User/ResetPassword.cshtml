@model ResetPasswordDto
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">@ViewData["Title"]</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">@ViewData["Title"]</div>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="ResetPassword">
                            <input type="hidden" asp-for="UserName" />

                            <div class="form-group position-relative">
                                <label asp-for="NewPassword" class="control-label">New Password</label>
                                <input asp-for="NewPassword" type="password" class="form-control" id="newPassword" placeholder="Enter new password" />
                                <span asp-validation-for="NewPassword" class="text-danger small"></span>
                            </div>

                            <div class="form-group position-relative">
                                <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Confirm new password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>

                            <div class="form-check mb-3">
                                <input type="checkbox" class="form-check-input" id="showPasswords" onclick="document.getElementById('newPassword').type = this.checked ? 'text' : 'password'; document.getElementById('confirmPassword').type = this.checked ? 'text' : 'password';" />
                                <label class="form-check-label" for="showPasswords">Show Passwords</label>
                            </div>

                            <button type="submit" class="btn btn-primary">Reset Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
