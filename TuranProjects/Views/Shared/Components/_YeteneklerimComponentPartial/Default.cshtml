     @model IEnumerable<Yeteneklerim>

     <!-- Skills Section -->
     <section id="skills" class="skills section light-background">

         <!-- Section Title -->
         <div class="container section-title" data-aos="fade-up">
             <h2>Yeteneklerim</h2>
             <p>
                 Aşağıda yer alan yeteneklerim, iş hayatımda ve kişisel projelerimde edindiğim deneyimlere dayanmaktadır. Her bir yetenek için kendimi geliştirmeye devam ediyorum ve yeni teknolojileri öğrenmeye açığım. Bu yeteneklerimle projelerimde daha iyi sonuçlar elde etmeyi hedefliyorum.
             </p>
         </div><!-- End Section Title -->

         <div class="container" data-aos="fade-up" data-aos-delay="100">
             <div class="row skills-content skills-animation">
                 @{
                     var leftColumn = Model.Take((int)Math.Ceiling(Model.Count() / 2.0)).ToList();
                     var rightColumn = Model.Skip(leftColumn.Count).ToList();
                 }

                 <div class="col-lg-6"><!-- Corrected: no colon, just class attribute -->
                     @foreach (var item in leftColumn)
                     {
                         <div class="progress">
                             <span class="skill">
                                 @if (!string.IsNullOrEmpty(item.YetenekIcon))
                                 {
                                     <i class="@item.YetenekIcon"></i>
                                 }
                                 <span>@item.Yetenek</span>
                                 <i class="val">@item.YetenekYuzde</i>
                             </span>
                             <div class="progress-bar-wrap">
                                 <div class="progress-bar" role="progressbar"
                                      aria-valuenow="@(int.TryParse(item.YetenekYuzde.Replace("%", ""), out var yuzde) ? yuzde : 0)"
                                      aria-valuemin="0" aria-valuemax="100"
                                      style="width:@item.YetenekYuzde"></div>
                             </div>
                             @if (!string.IsNullOrEmpty(item.YetenekAciklama))
                             {
                                 <small class="text-muted">@item.YetenekAciklama</small>
                             }
                         </div>
                     }
                 </div>

                 <div class="col-lg-6"><!-- Corrected: no colon, just class attribute -->
                     @foreach (var item in rightColumn)
                     {
                         <div class="progress">
                             <span class="skill">
                                 @if (!string.IsNullOrEmpty(item.YetenekIcon))
                                 {
                                     <i class="@item.YetenekIcon"></i>
                                 }
                                 <span>@item.Yetenek</span>
                                 <i class="val">@item.YetenekYuzde</i>
                             </span>
                             <div class="progress-bar-wrap">
                                 <div class="progress-bar" role="progressbar"
                                      aria-valuenow="@(int.TryParse(item.YetenekYuzde.Replace("%", ""), out var yuzde) ? yuzde : 0)"
                                      aria-valuemin="0" aria-valuemax="100"
                                      style="width:@item.YetenekYuzde"></div>
                             </div>
                             @if (!string.IsNullOrEmpty(item.YetenekAciklama))
                             {
                                 <small class="text-muted">@item.YetenekAciklama</small>
                             }
                         </div>
                     }
                 </div>
             </div>
         </div>
     </section><!-- /Skills Section -->
