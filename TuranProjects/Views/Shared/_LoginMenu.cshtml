@if (User.Identity!.IsAuthenticated && User.IsInRole("Admin")) {
		<a target="_blank" class="nav-link" aria-current="page" asp-controller="Dashboard" asp-area="Admin">  <i class="fa-solid fa-screwdriver-wrench"></i></a>

}

@if (User.Identity!.IsAuthenticated)
{
		<a target="_blank" 
			class="nav-link" 
			aria-current="page" 
			asp-controller="Account" 
            asp-route-returnUrl="@($"{Context.Request.Path}{Context.Request.QueryString}")"
			asp-action="Logout"> <i class="fa-solid fa-right-to-bracket"></i></a>

}
else
{
		<a target="_blank" 
			class="nav-link" 
			aria-current="page" 
			asp-controller="Account"
		   asp-route-returnUrl="@($"{Context.Request.Path}{Context.Request.QueryString}")"
			asp-action="Login"> <i class="fa-solid fa-right-to-bracket"></i> </a>
}
